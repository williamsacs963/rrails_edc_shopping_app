.mb-5
    .container
        .row
            =render "home/panel"
            .col-md-9
                .card-p-2
                    .card-body
                        %h1.mb-3.text-cernter.text-capitalize= params[:action]
                        %h3.mb-2.text-center Productos
                        .table-responisve
                            %table.table.table-hover
                                %tbody
                                    -@favorites.each do |favorite|
                                        %tr{:id => "p_#{favorite.id}"}
                                            %td.justify-content-between.align-items-center
                                                =favorite.product.p_name
                                            %td
                                                %span.badge-pill.badge-primary.px-3.py-2{product:"#{favorite.product.id}", class: "", :onclick => "actions.addCart(this)", :id => "c_#{favorite_id}"}
                                                    %i.fa.fa-fw.fa-shopping-cart.fa-lg
                                            %td
                                                %span.badge-pill.badge-primary.px-3.py-2{product:"#{favorite.product.id}", class: "", :onclick => "actions.deleteFavorite(this,#{favorite.id})", :id => "f_#{favorite_id}"}
                                                    %i.fa.fa-fw.fa-shopping-cart.fa-lg