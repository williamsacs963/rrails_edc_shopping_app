.container
  .row
    %div
    .offset-md-1.col-md-10
      .card.text-dark.p-5.border-primary.mb-5
        .card-body
          %h2.mb-4.text-center Edit #{resource_name.to_s.humanize}
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, builder: BootstrapFormBuilder) do |f|
            .row
              = f.errors
              = f.label :email
              = f.email_field :email, autofocus: true, autocomplete: "email"
              - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                %div
                  Currently waiting confirmation for: #{resource.unconfirmed_email}
              = f.label "password"
              = f.password_field :password, autocomplete: "new-password", placeholder:"(leave blank if you don't want to change it)"
              = f.label :password_confirmation
              = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "#{@minimum_password_length} caracteres minimos"
              = f.label :current_password
              = f.password_field :current_password, autocomplete: "current-password", placeholder: "Valida tu identidad"
              = f.label :name
              = f.text_field :name
              = f.label :age
              = f.number_field :age
              = f.label :state
              = f.text_field :state
              = f.label :city
              = f.text_field :city
              .col-md-2
              = link_to "Regresar", root_path, class: "col-md-4 btn btn-link"
              = f.submit "Actualizar"
          .row.mt-5
            .offset-md-1.col-md-4
              %h3 Cancelar cuenta
            .col-md-7
              %p
                Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger"}
              
